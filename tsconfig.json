{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$shared/*": ["src/lib/shared/*"],
			"$components/*": ["src/lib/components/*"],
			"$assets/*": ["src/lib/assets/*"]
		},
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	},
	"exclude": [
		"node_modules",
		"src/node_modules",
		"src/node_modules/*",
		"static",
		"src/static",
		"src/static/*"
	]
}
